          `categoryId` = #{categoryId,jdbcType=INTEGER},
          `categoryRootId` = #{categoryRootId,jdbcType=INTEGER},
          `userId` = #{userId,jdbcType=INTEGER},
          `title` = #{title,jdbcType=VARCHAR},
