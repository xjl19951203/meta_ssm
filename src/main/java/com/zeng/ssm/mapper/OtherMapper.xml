<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zeng.ssm.dao.OtherDao">
    <resultMap id="BaseResultMap" type="com.zeng.ssm.model.Other">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
    </resultMap>

    <insert id="insert" parameterType="com.zeng.ssm.model.Other" useGeneratedKeys="true" keyProperty="record.id" >
        insert into other (id, scene_id, `title`, `description`)
        values (#{record.id,jdbcType=INTEGER}, #{record.sceneId,jdbcType=INTEGER}, #{record.title,jdbcType=VARCHAR}, #{record.description,jdbcType=VARCHAR})
    </insert>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `other` where id = #{pk};
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * from `other`;
    </select>

    <select id="selectByContent" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * from `other`
        <if test="content != null">
            where title like '%${content}%'
        </if>
        ;
    </select>
</mapper>