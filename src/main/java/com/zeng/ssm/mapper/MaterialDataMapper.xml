<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zeng.ssm.dao.MaterialDataDao">
    <resultMap id="BaseResultMap" type="com.zeng.ssm.model.MaterialData">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="scene_data_id" jdbcType="INTEGER" property="sceneDataId" />
        <result column="material_id" jdbcType="INTEGER" property="materialId" />
        <result column="unit_id" jdbcType="INTEGER" property="unitId" />
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
        <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt" />
        <association property="material" column="material_id" select="com.zeng.ssm.dao.MaterialDao.selectByPrimaryKey"/>
        <association property="unit" column="unit_id" select="com.zeng.ssm.dao.UnitDao.selectByPrimaryKey"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, scene_data_id, material_id
    </sql>

    <insert id="insert" parameterType="com.zeng.ssm.model.MaterialData" useGeneratedKeys="true" keyProperty="record.id" >
        insert into material_data (id, scene_data_id, `material_id`, `unit_id`, `value`)
        values (#{record.id,jdbcType=INTEGER}, #{record.sceneDataId,jdbcType=INTEGER}, #{record.materialId,jdbcType=INTEGER},
        #{record.unitId,jdbcType=INTEGER}, #{record.value, jdbcType=VARCHAR})
    </insert>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `material_data` where id = #{pk};
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * from `material_data`;
    </select>

    <select id="selectMaterialDataListBySceneDataId" resultMap="BaseResultMap">
        select * from `material_data` where scene_data_id = #{pk}
    </select>

</mapper>