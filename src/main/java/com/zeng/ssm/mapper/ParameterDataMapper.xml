<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zeng.ssm.dao.ParameterDataDao">
    <resultMap id="BaseResultMap" type="com.zeng.ssm.model.ParameterData">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="sceneDataId" jdbcType="INTEGER" property="sceneDataId" />
        <result column="parameterId" jdbcType="INTEGER" property="parameterId" />
        <result column="unitId" jdbcType="INTEGER" property="unitId" />
        <result column="value" jdbcType="VARCHAR" property="value" />
        <result column="createdAt" jdbcType="TIMESTAMP" property="createdAt" />
        <result column="updatedAt" jdbcType="TIMESTAMP" property="updatedAt" />
        <association property="parameter" column="parameterId" select="com.zeng.ssm.dao.ParameterDao.selectByPrimaryKey"/>
        <association property="unit" column="unitId" select="com.zeng.ssm.dao.UnitDao.selectByPrimaryKey"/>
        <association property="sceneData" column="sceneDataId" select="com.zeng.ssm.dao.SceneDataDao.selectSimpleByPrimaryKey"/>
    </resultMap>

    <insert id="insert" parameterType="com.zeng.ssm.model.ParameterData" useGeneratedKeys="true" keyProperty="id" >
        insert into parameter_data (id, sceneDataId, `parameterId`, `unitId`, `value`)
        values (#{id,jdbcType=INTEGER}, #{sceneDataId,jdbcType=INTEGER}, #{parameterId,jdbcType=INTEGER},
        #{unitId,jdbcType=INTEGER}, #{value, jdbcType=VARCHAR})
    </insert>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `parameter_data` where id = #{pk};
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * from `parameter_data`;
    </select>

    <select id="selectParameterDataListBySceneDataId" resultMap="BaseResultMap">
        select * from `parameter_data` where sceneDataId = #{pk}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from `parameter_data` where id = #{pk,jdbcType=INTEGER}
    </delete>

</mapper>